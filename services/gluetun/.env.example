# Service Identity (must match NixOS user definitions)
PUID=2006
PGID=3000
TZ=America/Los_Angeles

# VPN Provider Configuration - Private Internet Access
VPN_SERVICE_PROVIDER=private internet access
OPENVPN_USER=your_pia_username_here
OPENVPN_PASSWORD=your_pia_password_here
SERVER_REGIONS=US East

# Kill Switch & DNS Configuration
FIREWALL_VPN_INPUT_PORTS=
DNS_KEEP_NAMESERVER=off
DNS_ADDRESS=1.1.1.1

# HTTP Proxy Configuration
HTTPPROXY=on
HTTPPROXY_LOG=on
HTTPPROXY_USER=
HTTPPROXY_PASSWORD=

# Health Check & Logging
HEALTH_VPN_DURATION_INITIAL=6s
LOG_LEVEL=info

# Optional: Port Forwarding (limited functionality with PIA)
# VPN_PORT_FORWARDING=off
# VPN_PORT_FORWARDING_USERNAME=
# VPN_PORT_FORWARDING_PASSWORD=

# Optional: Encryption Settings
# OPENVPN_ENCRYPTION_PRESET=strong

# Optional: Server Selection
# PORT_FORWARD_ONLY=off